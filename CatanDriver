  public static  void userTurnSelection(){
    Scanner scanner = new Scanner(System.in);
    boolean check = true;
    int userNum = 0;
    
    while(check){
      System.out.println("\n1) Move");
      System.out.println("2) Build");
      System.out.println("3) Check nearest settlement");
      System.out.println("4) Trade");
      System.out.print("5) End Turn\n: ");
      String input = scanner.next();
      if (Character.isDigit(input.charAt(0)) && input.length() < 2) {
        userNum = Integer.parseInt(input);
        if(userNum > 0 && userNum < 6){
          check = false;
          break;
        }
      }
      if(check){
        System.out.println("Enter a valid number"); }
    }
    switch (userNum) {
      case 1:
        
        break;
      case 2:
        
        break;
      case 3:
        
        break;
      case 4:
        
        break;
      case 5:
        
        break;
      default:
        
    }
    
  }
  
