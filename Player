/*
 * Updated: Aaron Strunk 11/23/2025
 * tracks a player's resources and current location
 */
public class Player{
  int wood;
  int stone;
  int sheep;
  int clay;
  int wheat;
  Node current;
  int score;
  
  Player(Node current){
    this.wood = 0;
    this.stone = 0;
    this.sheep = 0;
    this.clay = 0;
    this.wheat = 0;
    this.current = current;
    this.score = 0;
  }
  
  /**
   * Returns the current Node the player is at
   * @return Node as the player's current location
   */
  public Node getCurrent(){
    return current;
  }
  
  /*
   * modify the amount of resources the Player has
   * @param resource as String as which resource type to modify
   * @param modify as int as the amount of resource to modify by
   */
  public void modifyResource(String resource, int modify){
    switch (resource){
      case "wood":
        this.wood = wood + modify;
        break;
      case "clay":
        this.clay = clay + modify;
        break;
      case "wheat":
        this.wheat = wheat + modify;
        break;
      case "sheep":
        this.sheep = sheep + modify;
        break;
      case "stone":
        this.stone = stone + modify;
        break;
      default:
        break;
    }
  }
  
  /**
   * returns the amount of wood the player has
   * @return int the total wood the Player has
   */
  public int getWood(){
    return wood;
  }

  /**
   * returns the amount of stone the player has
   * @return int the total stone the Player has
   */
  public int getStone(){
    return stone;
  }
  
  /**
   * returns the amount of sheep the player has
   * @return int the total sheep the Player has
   */
  public int getSheep(){
    return sheep;
  }
  
  /**
   * returns the amount of clay the player has
   * @return int the total clay the Player has
   */
  public int getClay(){
    return clay;
  }
  
  /**
   * returns the amount of wheat the player has
   * @return int the total wheat the Player has
   */
  public int getWheat(){
    return wheat;
  }
  
  /*
   * get the score of the player
   * @return int as the score of the player
   */
  public int getScore(){
    return score + isLongestRoad();
  }
  
  /*
   * does this player have the Longest Road
   * @return int as 2 if yes or 0 if no
   */
  public int isLongestRoad(){
    //TODO
    return 2;
  }
}
