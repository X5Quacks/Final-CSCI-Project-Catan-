/*
 * tracks a player's resources and current location
 */

import java.util.*;
import java.io.*;

public class Player{
  int wood;
  int stone;
  int sheep;
  int clay;
  int wheat;
  Node current;
  int score;
  
  Player(Node current){
    this.wood = 0;
    this.stone = 0;
    this.sheep = 0;
    this.clay = 0;
    this.wheat = 0;
    this.current = current;
    this.score = 1;
  }
  
  /**
   * Returns the current Node the player is at
   * @return Node as the player's current location
   */
  public Node getCurrent(){
    return current;
  }
  
  /**
   * moves the current Node the Player is at
   * @param node as Node as the player's new location
   */
  public void setCurrent(Node node){
    this.current = node;
  }
  
  /*
   * modify the amount of resources the Player has
   * @param resource as String as which resource type to modify
   * @param modify as int as the amount of resource to modify by
   */
  public void modifyResource(String resource, int modify){
    switch (resource){
      case "wood":
        this.wood = wood + modify;
        break;
      case "clay":
        this.clay = clay + modify;
        break;
      case "wheat":
        this.wheat = wheat + modify;
        break;
      case "sheep":
        this.sheep = sheep + modify;
        break;
      case "stone":
        this.stone = stone + modify;
        break;
      default:
        break;
    }
  }
  
  /**
   * returns the amount of wood the player has
   * @return int the total wood the Player has
   */
  public int getWood(){
    return wood;
  }

  /**
   * returns the amount of stone the player has
   * @return int the total stone the Player has
   */
  public int getStone(){
    return stone;
  }
  
  /**
   * returns the amount of sheep the player has
   * @return int the total sheep the Player has
   */
  public int getSheep(){
    return sheep;
  }
  
  /**
   * returns the amount of clay the player has
   * @return int the total clay the Player has
   */
  public int getClay(){
    return clay;
  }
  
  /**
   * returns the amount of wheat the player has
   * @return int the total wheat the Player has
   */
  public int getWheat(){
    return wheat;
  }
  
  /*
   * get the score of the player (without LongestRoad)
   * @return int as the score of the player
   */
  public int getScore(){
    return score;
  }
  
  /*
   * get which resources the Player has
   * @return List<String> as the resources the Plyaer has at least 1 of
   */
  public List<String> getAvailableResources(){
    List<String> myList = new ArrayList<String>();
    //wheat
    if(getWheat()>0){
      myList.add("wheat");
    }
    //stone
    if(getStone()>0){
      myList.add("stone");
    }
    //clay
    if(getClay()>0){
      myList.add("clay");
    }
    //sheep
    if(getSheep()>0){
      myList.add("sheep");
    }
    //wood
    if(getWood()>0){
      myList.add("wood");
    }
    return myList;
  }
}
