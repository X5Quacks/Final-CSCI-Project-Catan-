/*
 * settlements, cities, or anything else we choose
 */
public class Node{
 int playerControl; //0 = no control, any number = that player controls the node
 String structure;
 String name;
 
 Node(String name){
   this.playerControl = 0;
   this.structure = "";
   this.name = name;
 }

//Updated 11/20/2025 Aaron added toString() and getName()
   /**
   * Returns a string representation of this Node
   * @return a string in the format "(name: structure)"
   */
  @Override
  public String toString() {
    return name + ": " + structure;
  }
  
  /**
   * returns the name of the Node
   * @return String the name of the Node
   */
  public String getName(){
    return name;
  }
}
