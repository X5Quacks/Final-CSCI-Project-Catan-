//Updated 12/3/25 - Aaron
public class Hexagon {
  private String resourceType;
  private int resourceNumber;
  private boolean robberStatus = false;
  
  public Hexagon(String resourceType, int resourceNumber){
    this.resourceType = resourceType;
    this.resourceNumber = resourceNumber;
  }
  
  public Hexagon(String resourceType){
    this.resourceType = resourceType;
    this.resourceNumber = -1;
    this.robberStatus = true;
  }
  
  
  /**
   * returns the resourceType
   * @return resourceType the type of resource the Hex produces
   */
  public String getResourceType(){
    return resourceType;
  }
  
  /**
   * returns the number on the Hex
   * @return resourceNumber is the number on top of the Hex
   */
  public int getResourceNumber(){
    return resourceNumber;
  }
  
  /**
   * says whether the robber is on the Hex
   * @return robberStatus is a boolean aboud if the robber is on the Hex
   */
  public boolean getRobberStatus(){
    return robberStatus;
  }
  
  /**
   * Tells if the Robber is on the Hex or not
   * @param status is if the robber is going to be on the Hex or leaving
   */
  public void setRobberStatus(boolean status){
    this.robberStatus = status;
  }
  
  /**
   * Returns a string representation of this Hexagon
   * @return a string in the format "(type(number))"
   */
  @Override
  public String toString() {
    return resourceType + "(" + resourceNumber + ")";
  }
}
